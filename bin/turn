#!/usr/bin/env ruby

require_relative '../lib/turn.rb'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
display_board(board)
puts "Please enter 1-9:"
user_input = gets.strip
index = input_to_index(user_input)
move(board, index, "X")
display_board(board)
